@model IEnumerable<BorrowTransaction>

<h2>My Borrowed Books</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Borrowed On</th>
            <th>Returned On</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (TempData["Debug"] != null)
        {
            <div style="color: darkorange; font-weight: bold;">
                @TempData["Debug"]
            </div>
        }
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Book?.Title</td>
                <td>@t.DateBorrowed.ToShortDateString()</td>
                <td>@(t.DateReturned?.ToShortDateString() ?? "Not Returned")</td>
                <td>@(t.DateReturned == null ? "Borrowed" : "Returned")</td>
                <td>
                    @if (t.DateReturned == null)
                    {
                        <a asp-action="Return" asp-route-transactionId="@t.Id" class="btn btn-sm btn-warning">Return</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>