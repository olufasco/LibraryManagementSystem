@model IEnumerable<Book>

<h2>Books</h2>
<a class="btn btn-primary" href="/Book/Create">Add Book</a>

<table class="table">
    <thead>
        <tr><th>Title</th><th>Author</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@(book.IsAvailable ? "Available" : "Borrowed")</td>
                <td>
                    <a href="/Book/Edit/@book.Id">Edit</a> |
                    <a href="/Book/Delete/@book.Id">Delete</a> |
                    @if (book.IsAvailable)
                    {
                        <a href="/Transaction/Borrow/@book.Id">Borrow</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>