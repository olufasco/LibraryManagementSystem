@model IEnumerable<BorrowTransaction>

<h2>Borrowed Books</h2>

<table class="table">
    <thead><tr><th>Member</th><th>Book</th><th>Date Borrowed</th><th>Date Returned</th></tr></thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Member?.Name</td>
                <td>@t.Book?.Title</td>
                <td>@t.DateBorrowed.ToShortDateString()</td>
                <td>@(t.DateReturned?.ToShortDateString() ?? "Not returned")</td>
            </tr>
        }
    </tbody>
</table>